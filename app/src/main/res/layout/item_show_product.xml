<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/img_2">

        <ImageView
            android:id="@+id/imgshow"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tvproductshow"
            android:layout_width="210dp"
            android:layout_height="46dp"
            android:text="Scotch Premium"
            app:layout_constraintStart_toEndOf="@id/imgshow"
            app:layout_constraintTop_toTopOf="@id/imgshow"
            android:layout_marginTop="5dp"
            android:layout_marginStart="@dimen/_11sdp"
            android:fontFamily="@font/poppins_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tvcategoryshow"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="Category: Chair  Offer"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toEndOf="@id/imgshow"
            app:layout_constraintTop_toBottomOf="@id/tvproductshow"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_11sdp"
            android:fontFamily="@font/poppins_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>